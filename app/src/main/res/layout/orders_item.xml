<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/edit_text_bg"
    android:padding="12dp"
    android:elevation="6dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/orders_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Shirt 1"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Add new TextView for Order Status -->
    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status: Placed"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/orders_add"
        app:layout_constraintStart_toStartOf="@+id/orders_add" />

</androidx.constraintlayout.widget.ConstraintLayout>
